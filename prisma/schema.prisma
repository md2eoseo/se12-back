// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Item {
  id        Int     @id @default(autoincrement())
  title     String
  author    String
  price     String
  contents  String
  category  String
  publicher String
  isbn      String @unique
  pressDate String
  activate  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}